doctype html
html(lang="en")
    head
        title Spotify App
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css')
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js")
        style.
            body {
                background-color: #000;
                color: #fff;
            }
            .btn-primary {
                background-color: #1DB954;
                border-color: #1DB954;
            }
    body
        div.container
            a.btn.btn-primary.float-start(href="/tracks") Back to Tracks
        h1.text-center Current Queue
        div.container
            table.table.table-striped
                thead
                    tr
                        th Queue Number
                        th Track Name
                        th Artist Name
                        th Track Length
                        th Artist Image
                tbody
                    each track, index in data.queue
                        tr
                            td= index + 1
                            td= track.name
                            td= track.artists.map(artist => artist.name).join(", ")
                            td= `${Math.floor(track.duration_ms / 60000)}:${Math.floor((track.duration_ms % 60000) / 1000).toFixed(0).padStart(2, '0')}`
                            td
                                if track.album && track.album.images && track.album.images.length
                                    img(src=track.album.images[0].url alt=track.album.name style='height: 50px;')
