doctype html
html
    head
        title Spotify User Registration
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
        script.
            // JavaScript function to validate the form
            function validateForm() {
                    var name = document.forms["registrationForm"]["name"].value;
                    var alias = document.forms["registrationForm"]["alias"].value;

                    if (name == "" || alias == "") {
                            alert("Both name and alias fields are required.");
                            return false;
                    }
                    return true;
            }
    body
        .container
            h1 Spotify User Registration
            form(name="registrationForm", action="process_registration.php", method="POST", onsubmit="return validateForm()")
                .mb-3
                    label(for="name", class="form-label") Name:
                    input(type="text", id="name", name="name", class="form-control", required)
                .mb-3
                    label(for="alias", class="form-label") Alias (Username):
                    input(type="text", id="alias", name="alias", class="form-control", required)
                input(type="submit", value="Register", class="btn btn-primary")
